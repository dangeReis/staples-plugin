{
    "manifest_version": 3,
    "name": "Staples Receipt Downloader",
    "version": "1.1",
    "permissions": ["activeTab", "tabs", "scripting", "downloads", "debugger", "contextMenus", "storage"],
    "host_permissions": ["https://www.staples.com/*"],
    "action": {
      "default_title": "Staples Receipt Downloader",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.staples.com/*"
        ],
        "js": ["content.js"]
      }
    ]
  }