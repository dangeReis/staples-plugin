{
    "manifest_version": 3,
    "name": "Staples Page Indicator",
    "version": "1.0",
    "permissions": ["activeTab", "tabs", "scripting"],
    "action": {
      "default_title": "On Staples Order Page",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.staples.com/ptd/myorders*"],
        "js": ["content.js"]
      }
    ]
  }